<h1>Listing tasks</h1>

<table>
  <thead>
    <tr>
      <th>Owner</th>
      <th>Desc</th>
      <th>Tool</th>
      <th>Configure</th>
      <th>Result</th>
      <th>State</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.owner %></td>
        <td><%= task.desc %></td>
        <td><%= task.tool_id %></td>
        <td><%= task.configure_id %></td>
        <td><%= task.result_id %></td>
        <td><%= task.state %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

