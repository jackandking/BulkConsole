<%= form_for(@tool) do |f| %>
  <% if @tool.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tool.errors.count, "error") %> prohibited this tool from being saved:</h2>

      <ul>
      <% @tool.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :desc %><br>
    <%= f.text_field :desc %>
  </div>
  <div class="field">
    <%= f.label :cmd %><br>
    <%= f.text_field :cmd %>
  </div>
  <% Tool.column_names.grep(/p\d$/).each do |c| %>
  <div class="field">
    <%= f.label c %><br>
    <%= f.select c, :value => @p_array %>
  </div>
  <div class="field">
    <%= f.label c+"_desc" %><br>
    <%= f.text_field c+"_desc" %>
  </div>
  <% end %>
  <% Tool.column_names.grep(/o\d$/).each do |c| %>
  <div class="field">
    <%= f.label c %><br>
    <%= f.select c, :value => @o_array %>
  </div>
  <div class="field">
    <%= f.label c+"_desc" %><br>
    <%= f.text_field c+"_desc" %>
  </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
